---
import PageLayout from "@layouts/PageLayout.astro";

type Props = {
  title: string;
  description: string;
};

const { title, description } = Astro.props;
---

<style is:global>
  main{
    width: 90%;
    max-width: 800px;
    margin-left: auto;
    margin-right: auto;
  }
</style>

<PageLayout title={title} description={description}>
  <slot />
</PageLayout>
